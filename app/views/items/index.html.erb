<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Main</th>
      <th>Second</th>
      <th>Salad</th>
      <th>Cheese</th>
      <th>Sauce</th>
      <th>Drink</th>
      <th>Price</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= Ingredient.find(item.main_id).name %></td>
        <td><%= Ingredient.find(item.second_id).name %></td>
        <td><%= Ingredient.find(item.salad_id).name %></td>
        <td><%= Ingredient.find(item.cheese_id).name %></td>
        <td><%= Ingredient.find(item.sauce_id).name %></td>
        <td><%= Ingredient.find(item.drink_id).name %></td>
        <td><%= item.price %></td>
        <td><%= item.order.id %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
